<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.ctfung.exchangerateproject.AddPayActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#045FB4"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true">
                <LinearLayout
                    android:id="@+id/linearType"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="30dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/folder"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textSize="18dp"
                            android:text="類別"/>
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#999999"
                            android:paddingTop="5dp"
                            android:text="娛樂" />
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4" />
            </LinearLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true">
                <LinearLayout
                    android:id="@+id/linearMoney"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="30dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/money"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textSize="18dp"
                            android:text="現金"/>
                        <TextView
                            android:id="@+id/tvMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#999999"
                            android:paddingTop="5dp"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4" />
            </LinearLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true">
                <LinearLayout
                    android:id="@+id/linearCurrency"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="30dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/currency"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvCurrency"
                            android:paddingTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textSize="18dp"
                            android:text="HKD"/>
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4" />
            </LinearLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true">
                <LinearLayout
                    android:id="@+id/linearTime"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="30dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/clock"
                        />
                    <LinearLayout
                        android:paddingLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textSize="18dp"
                            android:text="時間"/>
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#999999"
                            android:paddingTop="5dp"
                            android:text="2016-05-17 14:00:00" />
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4" />
            </LinearLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true">
                <LinearLayout
                    android:id="@+id/linearWrite"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="30dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/write"
                        />
                    <LinearLayout
                        android:paddingLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textSize="18dp"
                            android:text="備註"/>
                        <TextView
                            android:id="@+id/tvWrite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#999999"
                            android:paddingTop="5dp"
                            android:text="空" />
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:layout_weight="1"
                    android:text="取消"/>
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btnPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:layout_weight="1"
                    android:text="確定"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
